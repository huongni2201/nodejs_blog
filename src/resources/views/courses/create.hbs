<div>
    <h3>Đăng khóa học</h3>

    <form action="/courses/store" method="POST">
        <div class="form-group mt-4">
            <label for="name" class="form-label">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Tên khóa học">
        </div>

        <div class="form-group mt-4">
            <label for="description" class="form-label">Mô tả khóa học</label>
            <input type="text" class="form-control" id="description" name="description" placeholder="Mô tả khóa học">
        </div>

        <div class="form-group mt-4">
            <label for="videoId" class="form-label">Video ID</label>
            <input type="text" class="form-control" id="videoId" name="videoId" placeholder="Video ID">
        </div>

        <div class="form-group mt-4">
            <label for="level" class="form-label">Trình độ</label>
            <select class="form-control" name="level" id="level">
                <option value="">Lựa chọn khóa học</option>
                {{#each levels}}
                    <option value="{{this}}">{{capitalize this}}</option>
                {{/each}}
            </select>

        </div>


        <button type="submit" class="btn btn-primary mt-4">Thêm khóa học</button>
    </form>

</div>

