<div class="mt-4">
    <h3>Cập nhật khóa học</h3>

    <form action="/courses/{{course._id}}?_method=PUT" method="POST">
        <div class="form-group mt-4">
            <label for="name" class="form-label">Tên khóa học</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name"
                placeholder="Tên khóa học">
        </div>

        <div class="form-group mt-4">
            <label for="description" class="form-label">Mô tả khóa học</label>
            <textarea class="form-control" name="description"
                placeholder="Mô tả khóa học">{{course.description}}</textarea>
        </div>

        <div class="form-group mt-4">
            <label for="videoId" class="form-label">Video ID</label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId"
                placeholder="Video ID">
        </div>

        <div class="form-group mt-4">
            <label for="level" class="form-label">Trình độ</label>
            <select class="form-control" name="level" id="level">
                {{#each levels}}
                    <option value="{{this}}" 
                        {{#ifCond this ../course.level}}selected{{/ifCond}}>{{capitalize this}}</option>
                {{/each}}
            </select>

        </div>

        <button type="submit" class="btn btn-primary mt-4">Update</button>
    </form>

</div>